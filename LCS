#include <iostream>
using namespace std;
int lcs(string s1,string s2,int m,int n)
{
	int l[m+2][n+2];
	int i,j;
	for(int i=0;i<m;i++)
	{
		for(int i=0;i<n;i++)
		{
			if(i==0 || j==0)
				l[i][j]=0;
			
		      else	if(s1[i-1]==s2[j-1])
				l[i][j]=1+l[i-1][j-1];
			 if (s1[i]!=s2[j])
				l[i][j]=max(l[i-1][j],l[i][j-1]);
		}
	}
	return l[m][n];
}


int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
		string s1,s2;
		cin>>s1>>s2;
		cout<<lcs(s1,s2,s1.length(),s2.length())<<"\n";
	}
	return 0;
}
